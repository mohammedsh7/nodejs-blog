<div class="author">
	<h1 class="author__heading">Search Results</h1>
</div>
<article class="articles">
	<ul class="article-ul">
		<% if (posts.length) { %>
            <% posts.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span> <%= post.title %> </span>
                    <span class="article-list__date">
                        <%= post.createdAt.toDateString() %>
                    </span>
                </a>
            </li>
            <% }) %>
		<% } %>

		<h1></h1>

		<% if (!posts.length) { %>
		    <h4 style="text-align: center;">Posts not found based on <%= searchTerm %></h4>
		<% } %>
	</ul>
</article>
